---
interface Props {
  title: string;
}

import "../assets/css/main.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portafolio de Brayan Mosquera, desarrollador frontend especializado en Vue 3, Tailwind CSS y animaciones web modernas." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="Brayan Mosquera, desarrollador frontend, portafolio web, programador Vue, animaciones CSS, diseño web moderno, páginas web profesionales, Tailwind CSS, Astro framework, JavaScript, HTML, CSS, Desarrollador en neiva"
    />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://porfolio-lemon-ten.vercel.app/" />
    <meta property="og:title" content="David Mosquera | Desarrollador Frontend" />
    <meta property="og:description" content="Portafolio de David Mosquera, desarrollador frontend experto en Vue, Tailwind y animaciones modernas." />
    <meta property="og:image" content="https://res.cloudinary.com/dlmhszrtv/image/upload/v1755272028/banner-linkedin_juijdq.png" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://porfolio-lemon-ten.vercel.app/" />
    <meta name="twitter:title" content="Brayan Mosquera | Desarrollador Frontend" />
    <meta name="twitter:description" content="Portafolio de Brayan Mosquera, desarrollador frontend experto en Vue, Tailwind y animaciones modernas." />
    <meta name="twitter:image" content="https://res.cloudinary.com/dlmhszrtv/image/upload/v1755272028/banner-linkedin_juijdq.png" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="gradient-bg">
    <slot />
  </body>
</html>
