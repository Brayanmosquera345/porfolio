---
interface Props {
  title: string;
}

import "../assets/css/main.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="Brayan Mosquera, desarrollador frontend, portafolio web, programador Vue, animaciones CSS, diseño web moderno, páginas web profesionales, Tailwind CSS, Astro framework, JavaScript, HTML, CSS, Desarrollador en neiva"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="gradient-bg">
    <slot />
  </body>
</html>
